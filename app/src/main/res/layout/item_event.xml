<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:paddingRight="16dp"
              android:paddingLeft="16dp"
              android:paddingTop="8dp">

    <ImageView
        android:id="@+id/item_event_iv_icon"
        android:layout_height="match_parent"
        android:layout_width="72dp"
        android:contentDescription="@string/item_event_iv_content_description"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/events"/>

    <TextView
        android:id="@+id/item_event_tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/item_event_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_below="@id/item_event_tv_date_time"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/item_event_tv_gone_or_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_event_tv_title"
        android:layout_toRightOf="@id/item_event_iv_icon"
        android:layout_toEndOf="@id/item_event_iv_icon"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:id="@+id/item_event_tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_event_tv_title"
        android:layout_toRightOf="@id/item_event_tv_gone_or_left"
        android:layout_toEndOf="@id/item_event_tv_gone_or_left"/>

</RelativeLayout>